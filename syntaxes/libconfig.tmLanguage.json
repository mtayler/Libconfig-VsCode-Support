{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "LibConfig",
	"scopeName": "source.libconfig",
	"patterns": [
		{
			"include": "#value"
		}
	],
	"repository": {
		"array": {
			"begin": "\\[",
			"beginCaptures": {
				"0": {
					"name": "punctuation.definition.array.begin.libconfig"
				}
			},
			"end": "\\]",
			"endCaptures": {
				"0": {
					"name": "punctuation.definition.array.end.libconfig"
				}
			},
			"name": "meta.structure.array.libconfig",
			"patterns": [
				{
					"include": "#value"
				},
				{
					"match": ",",
					"name": "punctuation.separator.array.libconfig"
				},
				{
					"match": "[^\\s\\]]",
					"name": "invalid.illegal.expected-array-separator.libconfig"
				}
			]
		},
		"comments": {
			"patterns": [
				{
					"begin": "/\\*\\*(?!/)",
					"captures": {
						"0": {
							"name": "punctuation.definition.comment.libconfig"
						}
					},
					"end": "\\*/",
					"name": "comment.block.documentation.libconfig"
				},
				{
					"begin": "/\\*",
					"captures": {
						"0": {
							"name": "punctuation.definition.comment.libconfig"
						}
					},
					"end": "\\*/",
					"name": "comment.block.libconfig"
				},
				{
					"captures": {
						"1": {
							"name": "punctuation.definition.comment.libconfig"
						}
					},
					"match": "(//).*$\\n?",
					"name": "comment.line.double-slash.libconfig"
				}
			]
		},
		"constant": {
			"match": "\\b(?:true|false)\\b",
			"name": "constant.language.libconfig"
		},
		"number": {
			"match": "(?x)-?(?:0|[1-9]\\d*)(?:(?:\\.\\d+)?(?:[eE][+-]?\\d+)?)?",
			"name": "constant.numeric.libconfig"
		},
		"object": {
			"begin": "\\{",
			"beginCaptures": {
				"0": {
					"name": "punctuation.definition.object.begin.libconfig"
				}
			},
			"end": "\\};",
			"endCaptures": {
				"1": {
					"name": "punctuation.definition.object.end.libconfig"
				}
			},
			"name": "meta.structure.dictionary.libconfig",
			"patterns": [
				{
					"comment": "the libconfig object key",
					"include": "#objectkey"
				},
				{
					"include": "#comments"
				},
				{
					"begin": ":",
					"beginCaptures": {
						"0": {
							"name": "punctuation.separator.dictionary.key-value.libconfig"
						}
					},
					"end": ";",
					"endCaptures": {
						"1": {
							"name": "punctuation.separator.object.begin.libconfig"
						}
					},
					"name": "meta.structure.dictionary.value.libconfig",
					"patterns": [
						{
							"comment": "the JSON object value",
							"include": "#value"
						},
						{
							"match": "[^\\s,]",
							"name": "invalid.illegal.expected-dictionary-separator.libconfig"
						}
					]
				},
				{
					"include": "#statement"
				},
				{
					"match": "[^\\s\\}]",
					"name": "invalid.illegal.expected-dictionary-separator.libconfig"
				}
			]
		},
		"string": {
			"begin": "\"",
			"beginCaptures": {
				"0": {
					"name": "punctuation.definition.string.begin.libconfig"
				}
			},
			"end": "\"",
			"endCaptures": {
				"0": {
					"name": "punctuation.definition.string.end.libconfig"
				}
			},
			"name": "string.quoted.double.libconfig",
			"patterns": [
				{
					"include": "#stringcontent"
				}
			]
		},
		"objectkey": {
			"match": "[a-zA-Z][a-zA-Z0-9_]*",
			"name": "string.libconfig support.type.property-name.libconfig"
		},
		"stringcontent": {
			"patterns": [
				{
					"match": "(?x)\\\\(?:[\"\\\\/bfnrt]|u[0-9a-fA-F]{4})",
					"name": "constant.character.escape.libconfig"
				},
				{
					"match": "\\\\.",
					"name": "invalid.illegal.unrecognized-string-escape.libconfig"
				}
			]
		},
		"statement":{
			"begin": "=",
			"beginCaptures": {
				"0": {
					"name": "punctuation.definition.dictionary.begin.libconfig"
				}
			},
			"end": ";",
			"endCaptures": {
				"1": {
					"name": "punctuation.definition.dictionary.end.libconfig"
				}
			},
			"name": "meta.parameter.type.assignment"
		},
		"value": {
			"patterns": [
				{
					"include": "#constant"
				},
				{
					"include": "#number"
				},
				{
					"include": "#string"
				},
				{
					"include": "#array"
				},
				{
					"include": "#object"
				},
				{
					"include": "#objectkey"
				},
				{
					"include": "#comments"
				}
			]
		}
	}
}